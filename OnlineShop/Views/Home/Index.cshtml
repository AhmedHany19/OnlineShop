<div class="row">
    @foreach (var product in Model)
    {


        <div class="card ms-5 mb-5">

            <div class="imgBox">
                <img src="~/images/@product.ImageUrl" alt="Product Image" class="mouse">
            </div>

            <div class="contentBox">
                <h3>@product.Name</h3>
                <h2 class="price">@product.Price €</h2>
                <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="buy">Details</a>
            </div>

        </div>

    }
</div>
<div class="mt-5">
    @Html.PagedListPager(Model,generatePageUrl: c=>Href (contentPath:"~/Home/Index?page="+c),new PagedListRenderOptions {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }})
    
</div>