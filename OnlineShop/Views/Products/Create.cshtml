@model OnlineShop.Models.Product
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-info">Add New Product</h2>   

<a asp-action="Index" class="btn btn-success">Back to List</a>

<div class="row">
<form asp-action="Create" asp-controller="Products" method="post" enctype="multipart/form-data">
        <div class="p-3 mt-3 col-md-10 offset-1 ">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <h3>@ViewBag.message</h3>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label>Upload Image :</label>
            </div>
            <div class="col-8">
                    <input name="fileobj" class="form-control" type="file"  />
            </div>
        </div>
        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-8">
                <input asp-for="ProductColor" class="form-control" />
            </div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
             <textarea asp-for="Description" id="Description" class="ckeditor" name="Description" rows="200"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="ProductTypeId"></label>
            </div>
            <div class="col-8">
                    <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-select"></select>
                @*<input asp-for="ProductTypeId" class="form-control"/>*@
            </div>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="SpecialTagId"></label>
            </div>
            <div class="col-8">
                <select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTagId" class="form-select"></select>
                
            </div>
            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        </div>

        <div class="form-group row mt-3">
            <div class="col-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-8">
                <input asp-for="IsAvailable" class="form-check-input mt-0" type="checkbox" />
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
            <div class="form-group row mt-3">
            <div class="d-grid gap-2 col-md-8 mx-auto ">
                <input type="submit" class="btn btn-warning" value="Save" />
            </div>
            </div>
        </div>
</form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

    <script>
        $(document).ready(function () {
            CKEDITOR.replace(‘#Description’);
        });
    </script>































