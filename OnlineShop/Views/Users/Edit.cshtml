@model ProfileFormViewModel


@{
    ViewData["Title"] = "Edit User";
}

<div class="row col-md-10 mx-auto mt-5 ">
    <div class="col-md-6 mx-auto">
        <form asp-action="Edit" method="post">
            <h2>Create a new User.</h2>
            <hr />
            <input type="hidden" asp-for="Id" />
            @*            <div asp-validation-summary="All" class="text-danger"></div>
            *@
            <div class="form-floating text-black mt-3">
                <input asp-for="FirstName" class="form-control" aria-required="true" maxlength="100" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating text-black mt-3">
                <input asp-for="LastName" class="form-control" aria-required="true" maxlength="100" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating text-black mt-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating text-black mt-3">
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" maxlength="100" />
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <hr />


            <button type="submit" class="w-100 btn btn-lg btn-warning mt-3">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
